<html>
    <head>
        <style>
            .box {
                width:350px;
                margin:0px auto;
                border:2px solid black;
                background:#aaccdd;
                padding-bottom: 20px;
            }
            h2 {
                text-align: center;
            }
            table {
                padding-left: 10px;
                padding-right: 10px;
            }
            input[type='file'] {
                margin-bottom: 5px;
            }
        </style>
    </head>
    <body>
        <form align="center" method="post" action="/addbigtext">
            <div class="box">
                <h2><center>Add homepage changing text</center></h2>
                <table>
                    <tr>
                        <td>
                            <input type="text" placeholder="Add text" name="bigtext" required /><br/><br/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" name="submit" value="Add text" />
                        </td>
                    </tr>
                </table>
            </div>
        </form>
        <form align="center" action="/addGetStartedImages" method="post" enctype="multipart/form-data">
            <div class="box">
                <h2><center>Upload Get Started Images</center></h2>
                <table>
                    <tr>
                        <td>
                            <input type="file" name="getstartedimage" required /><br/>
                            <input type="text" placeholder="Enter Description" name="description" required /><br/><br/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" name="submit" value="submit" />
                        </td>
                    </tr>
                </table>
            </div>
        </form>
        <form align="center" action="/addClientInfo" method="post" enctype="multipart/form-data">
            <div class="box">
                <h2><center>Upload Client Photos</center></h2>
                <table>
                    <tr>
                        <td>
                            <input type="file" name="clientphoto" required /><br/>
                            <input type="text" placeholder="Enter Client Name" name="clientname" required /><br/>
                            <input type="text" placeholder="Enter Client Location" name="clientlocation" required /><br/>
                            <textarea rows="5" cols="50" placeholder="Enter Client Comments" name="clientcomment" required></textarea><br/><br/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" name="submit" value="submit" />
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </body>
</html>